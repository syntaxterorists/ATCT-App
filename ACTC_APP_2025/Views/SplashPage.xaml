<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ATCT2025App.Views.SplashSlides"
             x:Class="ATCT2025App.Views.SplashPage"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*, Auto">
        <!-- Carousel View for Slides -->
        <CarouselView x:Name="slidesCarousel" 
                      Grid.Row="0"
                      IsSwipeEnabled="True"
                      Loop="False"
                      IndicatorView="indicatorView">
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type ContentView}">
                    <local:Slide1/>
                    <local:Slide2/>
                    <local:Slide3/>
                    <local:Slide4/>
                    <local:Slide5/>
                </x:Array>
            </CarouselView.ItemsSource>
        </CarouselView>

        <!-- Bottom navigation section -->
        <Grid Grid.Row="1" Padding="20" ColumnDefinitions="Auto, *, Auto">
            <!-- Skip button -->
            <Button Text="Skip" 
                    Grid.Column="0" 
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    BorderWidth="0"
                    Clicked="OnSkipClicked"/>

            <!-- Indicator dots -->
            <IndicatorView x:Name="indicatorView"
                           Grid.Column="1"
                           HorizontalOptions="Center"
                           IndicatorColor="LightGray"
                           SelectedIndicatorColor="{StaticResource Primary}"
                           IndicatorSize="10"/>

            <!-- Next/Get Started button -->
            <Button x:Name="nextButton"
                    Text="Next"
                    Grid.Column="2"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="15,10"
                    Clicked="OnNextClicked"/>
        </Grid>
    </Grid>
</ContentPage>