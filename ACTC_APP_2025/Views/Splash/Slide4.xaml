<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ATCT2025App.Views.SplashSlides.Slide4">
    <VerticalStackLayout Spacing="20" 
                         Padding="30"
                         VerticalOptions="CenterAndExpand">

        <!-- Slide Image -->
        <Image Source="locations_illustration.png"
               HeightRequest="250"
               HorizontalOptions="Center" />

        <!-- Slide Title -->
        <Label Text="Navigate with Ease"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center" />

        <!-- Slide Description -->
        <Label Text="Find your way around conference venues with interactive maps, room details, and location-based notifications."
               FontSize="16"
               TextColor="{StaticResource TextSecondary}"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />
    </VerticalStackLayout>
</ContentView>