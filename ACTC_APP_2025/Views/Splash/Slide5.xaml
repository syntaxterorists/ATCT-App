<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ATCT2025App.Views.SplashSlides.Slide5">
    <VerticalStackLayout Spacing="20" 
                         Padding="30"
                         VerticalOptions="CenterAndExpand">

        <!-- Slide Image -->
        <Image Source="profile_illustration.png"
               HeightRequest="250"
               HorizontalOptions="Center" />

        <!-- Slide Title -->
        <Label Text="Personalize Your Experience"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center" />

        <!-- Slide Description -->
        <Label Text="Create your profile, bookmark favorite sessions, set reminders, and network with fellow attendees to make the most of your conference experience."
               FontSize="16"
               TextColor="{StaticResource TextSecondary}"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />
    </VerticalStackLayout>
</ContentView>