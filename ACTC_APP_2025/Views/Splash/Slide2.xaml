<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ATCT2025App.Views.SplashSlides.Slide2">
    <VerticalStackLayout Spacing="20" 
                         Padding="30"
                         VerticalOptions="CenterAndExpand">

        <!-- Slide Image -->
        <Image Source="program_illustration.png"
               HeightRequest="250"
               HorizontalOptions="Center" />

        <!-- Slide Title -->
        <Label Text="Explore the Program"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center" />

        <!-- Slide Description -->
        <Label Text="Discover exciting sessions, workshops, and keynotes tailored to your interests and professional development needs."
               FontSize="16"
               TextColor="{StaticResource TextSecondary}"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />
    </VerticalStackLayout>
</ContentView>