<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ATCT2025App.Views.HomePage"
             Title="Home">

    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, *" 
              Padding="20"
              RowSpacing="15">

            <!-- Header with logo and welcome message -->
            <StackLayout Grid.Row="0" Orientation="Vertical" Spacing="10">
                <Image Source="atct_logo.png" 
                       HeightRequest="60" 
                       HorizontalOptions="Start" />

                <Label Text="Welcome to ATCT 2025"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}" />

                <Label Text="Annual Technology Conference and Training 2025"
                       FontSize="16"
                       TextColor="{StaticResource TextSecondary}" />
            </StackLayout>

            <!-- Upcoming events section -->
            <Frame Grid.Row="1" 
                   BorderColor="{StaticResource Primary}" 
                   CornerRadius="10" 
                   Padding="15"
                   Margin="0,10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Next Session" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <Grid ColumnDefinitions="Auto, *" ColumnSpacing="15">
                        <Label Grid.Column="0" 
                               Text="10:30 AM" 
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextSecondary}"
                               VerticalOptions="Start" />

                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="Future of AI in Enterprise Applications" 
                                   FontAttributes="Bold" />
                            <Label Text="Main Hall - Building A" 
                                   FontSize="14"
                                   TextColor="{StaticResource TextSecondary}" />
                            <Label Text="Dr. Sarah Johnson" 
                                   FontSize="14"
                                   TextColor="{StaticResource TextSecondary}" />
                        </VerticalStackLayout>
                    </Grid>

                    <Button Text="View Full Schedule" 
                            Style="{StaticResource OutlineButton}"
                            HorizontalOptions="End"
                            Clicked="OnViewScheduleClicked" />
                </VerticalStackLayout>
            </Frame>

            <!-- Quick navigation tiles -->
            <Grid Grid.Row="2" 
                  ColumnDefinitions="*, *" 
                  RowDefinitions="*, *"
                  ColumnSpacing="15"
                  RowSpacing="15"
                  Margin="0,10">

                <!-- Program Tile -->
                <Frame Grid.Row="0" Grid.Column="0" 
                       BackgroundColor="{StaticResource Primary}" 
                       CornerRadius="10"
                       Padding="15">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnProgramTileTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout>
                        <Image Source="program_icon.png" 
                               HeightRequest="50" 
                               HorizontalOptions="Start" />
                        <Label Text="Program" 
                               TextColor="White" 
                               FontSize="18"
                               FontAttributes="Bold"
                               Margin="0,10,0,5" />
                        <Label Text="View sessions, workshops and keynotes" 
                               TextColor="White" 
                               FontSize="12"
                               Opacity="0.8" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Speakers Tile -->
                <Frame Grid.Row="0" Grid.Column="1" 
                       BackgroundColor="{StaticResource Secondary}" 
                       CornerRadius="10"
                       Padding="15">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSpeakersTileTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout>
                        <Image Source="speakers_icon.png" 
                               HeightRequest="50" 
                               HorizontalOptions="Start" />
                        <Label Text="Speakers" 
                               TextColor="White" 
                               FontSize="18"
                               FontAttributes="Bold"
                               Margin="0,10,0,5" />
                        <Label Text="Meet our industry experts" 
                               TextColor="White" 
                               FontSize="12"
                               Opacity="0.8" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Locations Tile -->
                <Frame Grid.Row="1" Grid.Column="0" 
                       BackgroundColor="{StaticResource Tertiary}" 
                       CornerRadius="10"
                       Padding="15">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLocationsTileTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout>
                        <Image Source="locations_icon.png" 
                               HeightRequest="50" 
                               HorizontalOptions="Start" />
                        <Label Text="Locations" 
                               TextColor="White" 
                               FontSize="18"
                               FontAttributes="Bold"
                               Margin="0,10,0,5" />
                        <Label Text="Maps and venue information" 
                               TextColor="White" 
                               FontSize="12"
                               Opacity="0.8" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Profile Tile -->
                <Frame Grid.Row="1" Grid.Column="1" 
                       BackgroundColor="{StaticResource Neutral}" 
                       CornerRadius="10"
                       Padding="15">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnProfileTileTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout>
                        <Image Source="profile_icon.png" 
                               HeightRequest="50" 
                               HorizontalOptions="Start" />
                        <Label Text="Profile" 
                               TextColor="White" 
                               FontSize="18"
                               FontAttributes="Bold"
                               Margin="0,10,0,5" />
                        <Label Text="Your personalized schedule" 
                               TextColor="White" 
                               FontSize="12"
                               Opacity="0.8" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>